{
  "title": "Volcano Types",
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple donut chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/StuartB99/fit3179-ass-2/main/volcano.csv"
  }, 
  "encoding": {
    "theta": {"aggregate": "count", "field": "volcano_number", "type": "quantitative", "title": "Number of Volcanoes"},
    "color": {"field": "primary_volcano_type", "type": "nominal", "title": "Types"},
    "opacity": { "condition": {"selection": "type_highlight", "value": 1.0}, "value": 0.3 }
  },
  "layer":[
    {
    "selection": {
      "pts": {"type": "single"},
      "type_highlight": { "type": "multi", "fields": ["primary_volcano_type"]  , "bind": "legend" }
  },
  "mark": {"type": "arc", "innerRadius": 50, "tooltip": true}
  },
  { "mark": { "type": "text","align": "right", "baseline": "middle", "dx": -80, "dy": 70,"fontSize": 11.5, "fontStyle": "italic"},
  "encoding": { "text": {"field": "primary_volcano_type", "type": "nominal"}, "color": {"value": "black"}, "opacity": { "condition": { "test": "datum['primary_volcano_type'] == 'Stratovolcano'  ", "value": 1 }, "value": 0 }}
  },
  { "mark": { "type": "text","align": "right", "baseline": "middle", "dx": 105, "dy":75, "fontSize": 11.5, "fontStyle": "italic"},
  "encoding": { "text": {"field": "primary_volcano_type", "type": "nominal"}, "color": {"value": "black"}, "opacity": { "condition": { "test": "datum['primary_volcano_type'] == 'Shield'  ", "value": 1 }, "value": 0 }}
  }
  ],  
  "view": {"stroke": null}
}
